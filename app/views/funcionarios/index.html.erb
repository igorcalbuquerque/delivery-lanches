<p id="notice"><%= notice %></p>
<p align="center"><td><%= link_to 'Tela Inicial', welcome_index_path %></td></p>
<p align="center"><%= link_to 'Novo Funcionario', new_funcionario_path %></p>

<h1 align="center">Lista de Funcionarios</h1>

<table align="center">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Senha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= funcionario.nome %></td>
        <td><%= funcionario.cpf %></td>
        <td><%= funcionario.senha %></td>
        <td><%= link_to 'Show', funcionario %></td>
        <td><%= link_to 'Edit', edit_funcionario_path(funcionario) %></td>
        <td><%= link_to 'Destroy', funcionario, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
